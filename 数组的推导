# -tyro#include<stdio.h>
#define N 110

int b[N];
int main()
{
	int i, n;
	scanf("%d", &n);
		for (i = 0; i < n; i++)

			scanf("%d", &b[i]);
		int suma=b[0],sumi=b[0];
		for (i = 1; i < n; i++)
		{
			if (b[i] == b[i - 1])
				suma += b[i];
			else
			{	
				suma += b[i];
				sumi += b[i];
			}
		}
		printf("%d\n%d", suma, sumi);

	return 0;
}
